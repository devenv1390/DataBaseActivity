<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SQLActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Create database"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_create"/>
        <Button
                android:text="Add data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_insert"/>
        <Button
                android:text="updata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_updata"/>
        <Button
                android:text="delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_delete"/>
        <Button
                android:text="query"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/btn_select"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textViewSQL" android:textSize="48sp"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>